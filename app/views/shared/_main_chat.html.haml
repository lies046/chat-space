.chat-main
  .main-header
  
    .main-header__left-box

      .main-header__left-box__current-group
        %p test
      %ul
        %li.main-header__left-box__menber-list
          menber:
        %li.main-header__left-box__menber-list__menber
          伊藤
    .main-header__edit-btn
      %p Edit
  .messages
    .message
      .message__upper-info
        
        .message__upper-info__talker
          %p 伊藤
        .message__upper-info__date
          %p 2019/11/23(sat) 00:00:00
